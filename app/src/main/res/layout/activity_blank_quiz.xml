<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankQuiz"
    android:background="#A3CFFA">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutQuizMain"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/custom_quiz_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageQuizMain"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_metanhydrate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textQuizMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/intersemibold"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/imageQuizMain"
            app:layout_constraintLeft_toRightOf="@id/imageQuizMain"
            app:layout_constraintTop_toTopOf="@id/imageQuizMain" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
        android:id="@+id/edittextNameQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/comfortaabold"
        android:background="@drawable/custom_quiz_blank"
        android:text=""
        android:minHeight="60dp"
        android:minWidth="162dp"
        android:textColor="#F2FAFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageviewQuestion"
        android:layout_width="157dp"
        android:layout_height="88dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_redfish_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittextNameQuestion" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutExplainQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:background="@drawable/custom_round_explain_box"
        android:backgroundTint="#D9F0FF"
        android:minWidth="327dp"
        android:minHeight="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageviewQuestion">

        <TextView
            android:id="@+id/textviewQuestion"
            android:layout_width="291dp"
            android:layout_height="126dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/comfortaabold"
            android:lineHeight="14dp"
            android:text="혹돔은 독도 앞바다에 서식하는 가장 큰 물고기이다"
            android:textAlignment="center"
            android:textColor="#223253"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonConfirmQuiz"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>