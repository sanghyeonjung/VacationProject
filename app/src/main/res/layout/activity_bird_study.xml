<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3CFFA"
    tools:context=".BirdStudyActivity">

    <ImageButton
        android:id="@+id/backButtonPlantStudyActivity"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_undo"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/buttonBird1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bird1"
        android:background="#A3CFFA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginStart="60dp"/>

    <ImageButton
        android:id="@+id/buttonBird2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bird2"
        android:background="#A3CFFA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="242dp"
        android:layout_marginStart="237dp"/>

    <ImageButton
        android:id="@+id/buttonBird3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bird3"
        android:background="#A3CFFA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="402dp"
        android:layout_marginStart="60dp"/>

    <ImageButton
        android:id="@+id/buttonBird4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bird4"
        android:background="#A3CFFA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="565dp"
        android:layout_marginStart="198dp"/>

    <ImageButton
        android:id="@+id/slideBtnLeft"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="345dp"
        android:src="@drawable/ic_slidebutton1"
        android:background="#A3CFFA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/slideBtnRight"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="345dp"
        android:src="@drawable/ic_slidebutton2"
        android:background="#A3CFFA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>